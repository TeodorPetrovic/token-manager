<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.masofino.birp.tokenmanager.controllers.MainController">
    <top>
        <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
            <tabs>
                <Tab text="Main">
                    <VBox alignment="TOP_LEFT" spacing="10" styleClass="tab">
                        <ListView fx:id="tokenList" prefHeight="400.0" prefWidth="598.0" VBox.vgrow="ALWAYS" />
                        <HBox spacing="10">
                            <Button onAction="#onAddToken" text="Add Token" />
                            <Button onAction="#onChangeDirectory" text="Set Directory" />
                        </HBox>
                    </VBox>
                </Tab>
                <Tab text="About">
                    <VBox alignment="CENTER">
                        <Label styleClass="about-label" text="Token Manager\nVersion 1.0" />
                    </VBox>
                </Tab>
            </tabs>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </padding>
        </TabPane>
    </top>
</BorderPane>
